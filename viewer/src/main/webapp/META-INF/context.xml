<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" disableURLRewriting="true" path="">
  <Parameter name="componentregistry.path" override="false" value="/viewer-html/components,/viewer-html/ibis"/>
  <!-- For Tomcat: define datasource in server.xml, for example:

    <Server ...>
        ...
        <GlobalNamingResources>
        <Resource name="jdbc/${ibis-flamingo-ds-name}"
                auth="Container"
                type="javax.sql.DataSource"
                username="geo_viewer"
                password="geo_viewer"
                driverClassName="oracle.jdbc.OracleDriver"
                url="jdbc:oracle:thin:@localhost:1521:orcl"
                maxActive="40"
                validationQuery="select 1 from dual"

                timeBetweenEvictionRunsMillis="30000"
                minEvictableIdleTimeMillis="5000"
            />
        </GlobalNamingResources>
        ...
    </Server>
    -->
    <!-- Tomcat resource link -->
    <ResourceLink global="jdbc/${ibis-flamingo-ds-name}" name="jdbc/geo_viewer" type="javax.sql.DataSource"/>
    <ResourceLink global="mail/session" name="mail/session" type="javax.mail.Session"/>
    <!-- use LockOutRealm instead of CombinedRealm to prevent brute-forcing -->
    <Realm className="org.apache.catalina.realm.LockOutRealm">
        <Realm allRolesMode="authOnly" className="org.apache.catalina.realm.DataSourceRealm" dataSourceName="jdbc/${ibis-flamingo-ds-name}"
               digest="SHA-1" roleNameCol="group_" userCredCol="password" userNameCol="username" userRoleTable="user_groups" userTable="user_">
            <CredentialHandler className="org.apache.catalina.realm.MessageDigestCredentialHandler" algorithm="SHA-1" />
        </Realm>
    </Realm>
</Context>
